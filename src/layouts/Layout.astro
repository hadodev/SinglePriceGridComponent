---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" sizes="32x32" href="/public/assets/images/favicon-32x32.png" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Karla";
    font-style: normal;
    font-weight: 200 800;
    font-display: swap;
    src: url(/public/assets/fonts/qkBbXvYC6trAT7RVLtw.woff2) format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329,
      U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }
  :root {
    /* ### Primary */
    --clr-accent-cyan: hsl(179, 62%, 43%);
    --clr-accent-bright-yellow: hsl(71, 73%, 54%);

    /* ### Neutral */
    --clr-neutral-light-gray: hsl(204, 43%, 93%);
    --clr-neutral-grayish-blue: hsl(218, 22%, 67%);
  }
  html {
    font-family: Karla, system-ui, sans-serif;
    background: var(--clr-neutral-light-gray);
  }
  body {
    display: grid;
    align-items: center;
    justify-content: center;
    min-height: 100dvh;
    color: var(--clr-neutral-light-gray);
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  h1,
  h2,
  h3,
  h4 {
    line-height: 1.1;
  }

  p {
    max-width: 65ch;
    text-wrap: pretty;
    margin: 0;
    padding: 0;
  }

  .visually-hidden {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    height: 1px;
    overflow: hidden;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }
</style>
